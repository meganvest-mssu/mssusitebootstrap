<script>

    //This may not be the best method as this loads all reviews into the header and probably messes with SEO for the home page which might overtake our Radtings page.  So be conscious of this.
    $(function() {
        var done = false;
        $('.cl_reviews').bind("DOMSubtreeModified",function(){
            if(!done){
                done=true;
                
                //Remove anyone who graduated before 2000
                var ordered = seoData.department.review.map((e)=> {e.gradDate = new Date(e.author.split(" ")[0]); return e}).filter( (e) => e.gradDate > new Date("1/1/2000")).sort((a,b) => { return a.gradDate > b.gradDate ? -1 : a.gradDate < b.gradDate ? 1 : 0});
                
                
                var randomReview = ordered[Math.floor((Math.random() * ordered.length) - 1)];    
                
                $("#testimonial-card-name").html(randomReview.gradDate.getFullYear() + " Graduate");
                //Fill in the body of the review, also remore ? from copy, bug from the reviews company
                $("#testimonial-card-copy").html(randomReview.reviewBody.replace(/\?/g, " "));
            }
        });
      });
    
    
</script>

